#!/bin/bash

directory = /var/www/projects/${PWD##*/}/

sudo rm -rf $directory
echo "Copying Contents of current folder to '$directory'..."
cp -R ../$directory /var/www/projects/
rm -rf /var/www/projects/$directory/.git
rm /var/www/projects/$directory/README.md
rm /var/www/projects
sudo chown -R aaron:www-data /var/www/projects/$directory
